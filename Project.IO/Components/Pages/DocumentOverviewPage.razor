@page "/documentOverviewPage"
@using Microsoft.AspNetCore.Components.Forms

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 bg-white rounded p-3">
            <p class="h1 fw-bold" style="color: #9b78ff">Mijn documenten</p>
            <div class="row">
                <div class="col-md-8">
                    <div class="rounded document-panel">
                        <div class="row">
                            <div class="col-sm-1">
                                <i class="bi bi-file-earmark-pdf-fill h1 text-danger"></i>
                            </div>
                            <div class="col-sm-7" style="height: 3rem; line-height: 3rem;">
                                <span class="h5 fw-bold mx-3">FO.pdf</span>
                            </div>
                            <div class="col-sm-2" style="height: 3rem; line-height: 3rem;">
                                <i class="bi bi-file-earmark-arrow-down-fill h1 text-muted"></i>
                            </div>
                            <div class="col-sm-2" style="height: 3rem; line-height: 3rem;">
                                <i class="bi bi-trash-fill h1 text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <label for="file-upload" class="btn add-back-button">
                            <i class="bi bi-plus-lg icon-100"></i>
                            <h4 class="fw-bold" style="font-size: initial;">File uploaden</h4>
                        </label>
                        <InputFile OnChange="@(async e => await FileUploading(e))" multiple id="file-upload" style="display: none" />
                    </div>
                    <div class="row">
                        <div class="btn add-back-button">
                            <i class="bi bi-arrow-left-square-fill icon-100"></i>
                            <h4 class="fw-bold" style="font-size: initial">Terug</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>