@page "/accountPage"

<div class="container-fluid">

    <Modal @ref="modal" title="Modal title" IsVerticallyCentered="true">
        <bodyTemplate>
            This is a vertically centered modal.
        </bodyTemplate>
        <footerTemplate>
            <button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">Close</button>
            <button Color="ButtonColor.Primary">Save changes</button>
        </footerTemplate>
    </Modal>

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 mb-3">
            <h1 class="text-center text-white font-weight-bold">project.io</h1>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="rounded py-2 row" style="background-color: #ffffff">
                <div class="col-sm-6 px-4" style="border-right: solid 1px; border-color: #9b78ff">
                    <h5 class="text-center" style="color: #9b78ff">Inloggen</h5>
                    <div class="form-group">
                        <input type="text" class="form-control my-3 bg-light" placeholder="Gebruikersnaam...">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control my-3 bg-light" placeholder="Wachtwoord...">
                    </div>
                    <div class="text-center">
                        <button @onclick="OnShowModalClick" class="btn text-white px-3" style="background-color: #9b78ff">Inloggen</button>
                    </div>
                </div>
                <div class="col-sm-6 px-4">
                    <h5 class="text-center" style="color: #9b78ff">Registreren</h5>
                    <div class="form-group">
                        <input type="text" class="form-control my-3 bg-light" placeholder="Gebruikersnaam...">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control my-3 bg-light" placeholder="E-mailadres...">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control my-3 bg-light" placeholder="Wachtwoord...">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control my-3 bg-light" placeholder="Herhaal Wachtwoord...">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn text-white px-3" style="background-color: #9b78ff">Registreren</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>

@code {
    private Modal modal = default!;

    private async Task OnShowModalClick()
    {
        await modal.Show();
    }

    private async Task OnHideModalClick()
    {
        await modal.Close();
    }
}